<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate
Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernateconfiguration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/empleadosrest</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.show_sql">true</property>
		
		<mapping class="com.olmo.Querys.entity.Departamento"/>
		<mapping class="com.olmo.Querys.entity.Direccion"/>
		<mapping class="com.olmo.Querys.entity.Pais"/>
		<mapping class="com.olmo.Querys.entity.Trabajador"/>
		<mapping class="com.olmo.Querys.entity.Trabajo"/>
	</session-factory>
</hibernate-configuration>
